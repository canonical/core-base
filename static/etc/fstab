/writable/system-data/etc/modules-load.d /etc/modules-load.d none bind,x-initrd.mount 0 0
/writable/system-data/etc/netplan /etc/netplan none bind,x-initrd.mount 0 0
/writable/system-data/etc/network/if-up.d /etc/network/if-up.d none bind,x-initrd.mount 0 0
/writable/system-data/etc/ssh /etc/ssh none bind,x-initrd.mount 0 0
