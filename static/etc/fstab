/writable/system-data/etc/default/swapfile /etc/default/swapfile none bind,x-initrd.mount 0 0
/writable/system-data/etc/environment /etc/environment none bind,x-initrd.mount 0 0
/writable/system-data/etc/hosts /etc/hosts none bind,x-initrd.mount 0 0
