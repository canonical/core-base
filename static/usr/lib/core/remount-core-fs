#!/bin/bash

FILESYSTEMS=(
    /run/mnt/base
    /run/mnt/data
    /run/mnt/gadget
    /run/mnt/kernel
    /run/mnt/snapd
    /run/mnt/ubuntu-boot
    /run/mnt/ubuntu-save
    /run/mnt/ubuntu-seed
    /writable
    /run/mnt/tee-data
)

for fs in "${FILESYSTEMS[@]}"; do
    if mountpoint -q "${fs}"; then
        mount --make-private "${fs}"
    fi
done
