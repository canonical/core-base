    apparmor
    bash-completion
    bzip2
    cloud-init
    cryptsetup
    dbus
    dbus-user-session
    distro-info-data
    dmsetup
    dosfstools
    finalrd
    gnutls-bin
    fonts-ubuntu
    iproute2
    iptables
    iputils-ping
    kmod
    less
    libengine-pkcs11-openssl
    libnss-extrausers
    libopts25
    libp11-3
    libpam-modules
