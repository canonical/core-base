    mkdir -p etc/apt/preferences.d/
    cat >etc/apt/preferences.d/fips.pref <<'EOF'
Package: *
Pin: release o=LP-PPA-ubuntu-advantage-pro-fips-updates
Pin-Priority: 1010
EOF
fi

