deb [trusted=yes] file:/install-data/local-debs ./
EOF

# This gives higher priority to local-debs repository
cat <<EOF >/etc/apt/preferences
Package: *
Pin: origin ""
Pin-Priority: 1001
EOF

# install some packages we need
apt update
apt dist-upgrade -y

